                                                            <option value="80">80</option>
                                                            <option value="75">75</option>
                                                            <option value="70">70</option>
                                                            <option value="65">65</option>
                                                            <option value="0">0</option>
                                                        </select>
                                                    </td>
                                                    <td class="text-center grade-average">96</td>
                                                    <td class="text-center">
                                                        <select class="form-select remarks-select status-passed mx-auto" onchange="updateRemarksStyle(this)">
                                                            <option value="Passed" selected>Passed</option>
                                                            <option value="Failed">Failed</option>
                                                            <option value="Incomplete">Incomplete</option>
                                                        </select>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="floating-actions mt-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        <small>Make sure all grades are entered before submitting</small>
                                    </div>
                                    <button class="btn btn-maroon px-4 py-2" onclick="submitGrades()">
                                        <i class="fas fa-paper-plane me-2"></i> Submit All Grades
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
